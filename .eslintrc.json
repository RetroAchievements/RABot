{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        // TODO try to get rid of all those exceptions...
        "max-len": "off",
        "no-console": "off",
        "no-plusplus": "off",
        "no-continue": "off",
        "no-await-in-loop": "off",
        "no-restricted-syntax": "off",
        "class-methods-use-this": "off",
        "prefer-destructuring": "off",
        "radix": "off",
        "import/no-dynamic-require": "off",
        "global-require": "off",
        "no-return-assign": "off",
        "no-cond-assign": "off",
        "no-nested-ternary": "off",
        "no-param-reassign": "off",
        "consistent-return": "off",
        "array-callback-return": "off",
        "func-names": "off"
    }
}
